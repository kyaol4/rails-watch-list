<h1><%= @list.name %></h1>
<%= link_to 'Add bookmark', new_list_bookmark_path(@list.id) %>
<p>Find me in app/views/lists/show.html.erb</p>
<% @list.bookmarks.each do |bookmark| %>
  <p>Tilte : <%=bookmark.movie.title %></p>
  <p>Rating : <%= bookmark.movie.rating %></p>
  <p>Comment : <%= bookmark.comment %></p>
  <p><%= link_to 'Delete comment', bookmark_path(bookmark[:id]), method: :delete, data: { confirm: "Do you want to delete about this #{bookmark.comment} comment?"} %></p>
<% end %>
<br>
<p><%= link_to 'back to the lists', lists_path %></p>
