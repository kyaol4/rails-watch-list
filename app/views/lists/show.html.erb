<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @list.photo.attached? ? cl_image_path(@list.photo.key) : image_path(@list.movies.pluck(:poster_url).sample || 'default.jpg') %>);">
  <div class="container">

    <h1><%= @list.name %></h1>
    <%= link_to 'Add bookmark', new_list_bookmark_path(@list.id), class: "btn btn-ghost" %>
    <% @list.bookmarks.each do |bookmark| %>
      <p>Tilte : <%=bookmark.movie.title %></p>
      <p>Rating : <%= bookmark.movie.rating %></p>
      <p>Comment : <%= bookmark.comment %></p>
      <p><%= link_to 'Delete comment', bookmark_path(bookmark[:id]), method: :delete, data: { confirm: "Do you want to delete about this #{bookmark.comment} comment?"} %></p>
    <% end %>
    <hr>
    <p><%= link_to 'back to the lists', lists_path, class: "btn btn-ghost" %></p>
  </div>
</div>
